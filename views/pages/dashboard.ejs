<%- include('../partials/header') %>

<div class="dashboard-layout">
  <%- include('../partials/sidebar') %>
  
  <div class="main-content">
    <!-- Welcome Panel -->
    <div class="welcome-panel">
      <div class="welcome-content">
        <h1>Welcome back, Admin!</h1>
        <p>Today is <span id="current-date"></span></p>
      </div>
      <div class="welcome-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 12l2 2 4-4"></path>
          <path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9s4.03-9 9-9c1.53 0 2.96.38 4.22 1.06"></path>
        </svg>
      </div>
    </div>

    <!-- Summary Cards -->
    <div class="summary-grid">
      <div class="summary-card students">
        <div class="card-content">
          <div class="card-header">
            <h3>Total Students</h3>
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
          </div>
          <div class="card-number">1,247</div>
          <div class="card-trend positive">+12% from last month</div>
        </div>
      </div>
      
      <div class="summary-card courses">
        <div class="card-content">
          <div class="card-header">
            <h3>Total Courses</h3>
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
              </svg>
            </div>
          </div>
          <div class="card-number">24</div>
          <div class="card-trend positive">+2 new courses</div>
        </div>
      </div>
      
      <div class="summary-card attendance">
        <div class="card-content">
          <div class="card-header">
            <h3>Today's Attendance</h3>
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 11l3 3l8-8"></path>
                <path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9s4.03-9 9-9c1.53 0 2.96.38 4.22 1.06"></path>
              </svg>
            </div>
          </div>
          <div class="card-number">89.5%</div>
          <div class="card-trend neutral">Average performance</div>
        </div>
      </div>
      
      <div class="summary-card revenue">
        <div class="card-content">
          <div class="card-header">
            <h3>This Month</h3>
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="1" x2="12" y2="23"></line>
                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
              </svg>
            </div>
          </div>
          <div class="card-number">Rs. 45,200</div>
          <div class="card-trend positive">+8% from last month</div>
        </div>
      </div>
    </div>

    <!-- Main Dashboard Content -->
    <div class="dashboard-content">
      <!-- Recent Students and Chart Row -->
      <div class="content-row">
        <!-- Recent Students Section -->
        <div class="recent-students card">
          <div class="card-header">
            <h3>Recent Students</h3>
            <a href="/students" class="view-all">View All</a>
          </div>
          <div class="students-list">
            <div class="student-item">
              <div class="student-avatar">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
              </div>
              <div class="student-info">
                <h4>Ahmad Ali</h4>
                <span class="roll-number">Roll: 2024001</span>
                <span class="join-date">Joined: Jan 15, 2024</span>
              </div>
              <span class="status active">Active</span>
            </div>
            <div class="student-item">
              <div class="student-avatar">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
              </div>
              <div class="student-info">
                <h4>Fatima Khan</h4>
                <span class="roll-number">Roll: 2024002</span>
                <span class="join-date">Joined: Jan 18, 2024</span>
              </div>
              <span class="status active">Active</span>
            </div>
            <div class="student-item">
              <div class="student-avatar">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
              </div>
              <div class="student-info">
                <h4>Muhammad Hassan</h4>
                <span class="roll-number">Roll: 2024003</span>
                <span class="join-date">Joined: Jan 20, 2024</span>
              </div>
              <span class="status active">Active</span>
            </div>
            <div class="student-item">
              <div class="student-avatar">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
              </div>
              <div class="student-info">
                <h4>Aisha Ahmed</h4>
                <span class="roll-number">Roll: 2024004</span>
                <span class="join-date">Joined: Jan 22, 2024</span>
              </div>
              <span class="status active">Active</span>
            </div>
          </div>
        </div>

        <!-- Attendance Chart -->
        <div class="attendance-chart card">
          <div class="card-header">
            <h3>Weekly Attendance</h3>
            <select class="chart-filter">
              <option>This Week</option>
              <option>Last Week</option>
              <option>This Month</option>
            </select>
          </div>
          <div class="chart-container">
            <canvas id="attendanceChart" width="400" height="300"></canvas>
          </div>
        </div>
      </div>

      <!-- Current Courses and Quick Actions Row -->
      <div class="content-row">
        <!-- Current Courses -->
        <div class="current-courses card">
          <div class="card-header">
            <h3>Current Courses</h3>
            <a href="/courses" class="view-all">Manage</a>
          </div>
          <div class="courses-list">
            <div class="course-item">
              <div class="course-info">
                <h4>Web Development</h4>
                <span class="course-code">WD-2024</span>
              </div>
              <span class="course-status active">Active</span>
              <span class="student-count">45 students</span>
            </div>
            <div class="course-item">
              <div class="course-info">
                <h4>Mobile App Development</h4>
                <span class="course-code">MAD-2024</span>
              </div>
              <span class="course-status active">Active</span>
              <span class="student-count">32 students</span>
            </div>
            <div class="course-item">
              <div class="course-info">
                <h4>Data Science</h4>
                <span class="course-code">DS-2024</span>
              </div>
              <span class="course-status active">Active</span>
              <span class="student-count">28 students</span>
            </div>
            <div class="course-item">
              <div class="course-info">
                <h4>Digital Marketing</h4>
                <span class="course-code">DM-2024</span>
              </div>
              <span class="course-status pending">Starting Soon</span>
              <span class="student-count">15 enrolled</span>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions card">
          <div class="card-header">
            <h3>Quick Actions</h3>
          </div>
          <div class="actions-grid">
            <button class="action-btn primary">
              <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="16"></line>
                <line x1="8" y1="12" x2="16" y2="12"></line>
              </svg>
              <span>Add Student</span>
            </button>
            <button class="action-btn secondary">
              <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="20" x2="18" y2="10"></line>
                <line x1="12" y1="20" x2="12" y2="4"></line>
                <line x1="6" y1="20" x2="6" y2="14"></line>
              </svg>
              <span>View Attendance</span>
            </button>
            <button class="action-btn tertiary">
              <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
              </svg>
              <span>Manage Courses</span>
            </button>
            <button class="action-btn quaternary">
              <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="1" x2="12" y2="23"></line>
                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
              </svg>
              <span>Fee Management</span>
            </button>
            <button class="action-btn fifth">
              <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14,2 14,8 20,8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10,9 9,9 8,9"></polyline>
              </svg>
              <span>Generate Reports</span>
            </button>
            <button class="action-btn sixth">
              <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
              </svg>
              <span>Settings</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Notifications -->
      <div class="notifications card">
        <div class="card-header">
          <h3>Notifications & Alerts</h3>
          <span class="notification-count">3</span>
        </div>
        <div class="notifications-list">
          <div class="notification-item urgent">
            <div class="notification-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                <line x1="12" y1="9" x2="12" y2="13"></line>
                <line x1="12" y1="17" x2="12.01" y2="17"></line>
              </svg>
            </div>
            <div class="notification-content">
              <h4>Fee Payment Overdue</h4>
              <p>12 students have pending fee payments due today</p>
              <span class="notification-time">2 hours ago</span>
            </div>
          </div>
          <div class="notification-item info">
            <div class="notification-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="16" x2="12" y2="12"></line>
                <line x1="12" y1="8" x2="12.01" y2="8"></line>
              </svg>
            </div>
            <div class="notification-content">
              <h4>New Course Registration</h4>
              <p>Digital Marketing course has 5 new registrations</p>
              <span class="notification-time">4 hours ago</span>
            </div>
          </div>
          <div class="notification-item success">
            <div class="notification-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 11l3 3l8-8"></path>
                <path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9s4.03-9 9-9c1.53 0 2.96.38 4.22 1.06"></path>
              </svg>
            </div>
            <div class="notification-content">
              <h4>Attendance Recorded</h4>
              <p>Today's attendance has been successfully recorded for all classes</p>
              <span class="notification-time">6 hours ago</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
